{
    "name": "copycat-js",
    "version": "0.1.0",
    "description": "CopyCat.js â€” tiny, secure, and friendly clipboard helper (async Clipboard API + robust fallbacks + feedback hooks).",
    "main": "dist/copycat-js.cjs.js",
    "module": "dist/copycat-js.esm.js",
    "browser": "dist/copycat-js.umd.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist",
        "src",
        "README.md",
        "LICENSE"
    ],
    "scripts": {
        "clean": "rm -rf dist node_modules .rollup.cache",
        "lint": "eslint \"src/**\" \"examples/**\"",
        "format": "prettier --write \"src/**\" \"examples/**\" \"*.md\"",
        "test": "vitest",
        "build:cjs": "rollup -c rollup.config.cjs.js",
        "build:esm": "rollup -c rollup.config.esm.js",
        "build:umd": "rollup -c rollup.config.umd.js",
