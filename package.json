    "author": "softwaredeveloper01",
    "license": "MIT",
    "engines": {
        "node": ">=14"
    },
    "devDependencies": {
        "@rollup/plugin-commonjs": "^25.0.0",
        "@rollup/plugin-node-resolve": "^15.0.0",
        "@rollup/plugin-replace": "^5.0.0",
        "eslint": "^8.0.0",
        "prettier": "^2.0.0",
        "rollup": "^3.0.0",
